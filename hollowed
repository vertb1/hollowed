local screenGui = Instance.new("ScreenGui")
screenGui.Parent = game:GetService("CoreGui")

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 120, 0, 60)
frame.Position = UDim2.new(0.85, 0, 0.1, 0)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.BorderSizePixel = 0
frame.Parent = screenGui

local toggleButton = Instance.new("TextButton")
toggleButton.Size = UDim2.new(0.9, 0, 0.8, 0)
toggleButton.Position = UDim2.new(0.05, 0, 0.1, 0)
toggleButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
toggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
toggleButton.Text = "ESP: OFF"
toggleButton.Font = Enum.Font.GothamBold
toggleButton.TextSize = 5
toggleButton.Parent = frame


local RunService = game:GetService("RunService")
local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")


local player = Players.LocalPlayer
local espEnabled = false
local espParts = {}


local function findChests()
    local chests = {}
    for _, v in pairs(workspace:GetDescendants()) do
        if v.Name == "ChestPresetInteraction" then
            table.insert(chests, v)
        end
    end
    return chests
end


local function createESPForChest(chest)
    local billboardGui = Instance.new("BillboardGui")
    billboardGui.Size = UDim2.new(0, 60, 0, 30)
    billboardGui.AlwaysOnTop = true
    billboardGui.StudsOffset = Vector3.new(0, 2, 0)
    billboardGui.Adornee = chest
    billboardGui.Parent = chest
    local textLabel = Instance.new("TextLabel")
    textLabel.Size = UDim2.new(1, 0, 1, 0)
    textLabel.BackgroundTransparency = 1
    textLabel.Text = "Chest"
    textLabel.TextColor3 = Color3.new(1, 1, 0)
    textLabel.TextScaled = true
    textLabel.Font = Enum.Font.GothamBold
    textLabel.Parent = billboardGui
    table.insert(espParts, billboardGui)
    return billboardGui
end


local function updateESP()
    if espEnabled then
        for _, chest in ipairs(findChests()) do
            local existingESP = espParts[chest]
            if not existingESP then
                createESPForChest(chest)
            end
        end
    end
    for i = #espParts, 1, -1 do
        local chest = espParts[i].Adornee
        if not chest or not chest:IsDescendantOf(workspace) then
            espParts[i]:Destroy()
            table.remove(espParts, i)
        end
    end
end


local function updateESPColors()
    if not player.Character or not player.Character:FindFirstChild("HumanoidRootPart") then return end
    local rootPart = player.Character.HumanoidRootPart
    for _, esp in ipairs(espParts) do
        if esp.Adornee then
            local distance = (rootPart.Position - esp.Adornee.Position).Magnitude
            local color = Color3.new(1, math.clamp(1 - (distance / 1000), 0, 1), 0)
            esp.TextLabel.TextColor3 = color
        end
    end
end


local function toggleESP()
    espEnabled = not espEnabled
    toggleButton.Text = espEnabled and "ESP: ON" or "ESP: OFF"
    toggleButton.BackgroundColor3 = espEnabled and Color3.fromRGB(0, 170, 0) or Color3.fromRGB(50, 50, 50)
    
    if not espEnabled then
        for i = #espParts, 1, -1 do
            espParts[i]:Destroy()
            table.remove(espParts, i)
        end
    end
    
    updateESP()
end


UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if not gameProcessed and input.KeyCode == Enum.KeyCode.V then
        toggleESP()
    end
end)


RunService.Stepped:Connect(function()
    if espEnabled then
        updateESPColors()
    end
end)


toggleButton.MouseButton1Click:Connect(toggleESP)
